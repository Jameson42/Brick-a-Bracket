{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "module": "esnext",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@bab/admin": ["src/app/admin/index"],
      "@bab/core": ["src/app/core/index"],
      "@bab/core/*": ["src/app/core/*"],
      "@bab/shared": ["src/app/shared/index"],
      "@bab/shared/*": ["src/app/shared/*"],
      "@bab/primary": ["src/app/primary/index"],
      "@bab/primary/*": ["src/app/primary/*"],
      "@bab/secondary": ["src/app/secondary/index"],
      "@bab/secondary/*": ["src/app/secondary/*"],
    }
  }
}
